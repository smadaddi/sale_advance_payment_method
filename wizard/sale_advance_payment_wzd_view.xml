<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit sale advance payment wizard to add payment method line field -->
    <record id="view_account_voucher_wizard_inherit" model="ir.ui.view">
        <field name="name">account.voucher.wizard.inherit.payment.method</field>
        <field name="model">account.voucher.wizard</field>
        <field name="inherit_id" ref="sale_advance_payment.view_account_voucher_wizard" />
        <field name="arch" type="xml">
            <!-- Change journal_id label from "Payment Method" to "Journal" -->
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="string">Journal</attribute>
            </xpath>
            
            <!-- Add payment_method_line_id field after payment_type -->
            <xpath expr="//field[@name='payment_type']" position="after">
                <field
                    name="payment_method_line_id"
                    domain="[('journal_id', '=', journal_id), ('show_in_advance_payment', '=', True), ('payment_type', '=', payment_type)]"
                    options="{'no_create': True, 'no_open': True}"
                />
            </xpath>
        </field>
    </record>
</odoo>
