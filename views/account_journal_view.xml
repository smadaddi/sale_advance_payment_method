<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit account.journal form view to add show_in_advance_payment field -->
    <record id="view_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.payment.method</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="arch" type="xml">
            <!-- Add field to Incoming Payments tab -->
            <xpath
                expr="//page[@id='inbound_payment_settings']//field[@name='inbound_payment_method_line_ids']//list//field[@name='name']"
                position="after"
            >
                <field name="show_in_advance_payment" />
            </xpath>
            <!-- Add field to Outgoing Payments tab -->
            <xpath
                expr="//page[@id='outbound_payment_settings']//field[@name='outbound_payment_method_line_ids']//list//field[@name='name']"
                position="after"
            >
                <field name="show_in_advance_payment" />
            </xpath>
        </field>
    </record>
</odoo>
